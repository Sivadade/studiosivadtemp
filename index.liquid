{% comment %}
  Studio Sivad - Homepage Template
  Main landing page for collaborator stores
  Version: 1.0.0
{% endcomment %}

{%- liquid
  assign featured_collection = collections[settings.featured_collection] | default: collections.all
  assign collaborator_name = settings.collaborator_name | default: 'Creator'
  assign store_title = settings.store_title | default: shop.name
  assign show_live_drops = settings.show_live_drops | default: true
  assign show_stats = settings.show_stats | default: true
  assign show_about = settings.show_about | default: true
-%}

<!-- Homepage Styles -->
<style>
  .homepage {
    min-height: 100vh;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, var(--primary-color, #000) 0%, var(--secondary-color, #333) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('{{ settings.hero_background | img_url: "2000x" }}') center/cover;
    opacity: 0.3;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    margin-bottom: 1rem;
    letter-spacing: 1px;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .hero-cta {
    display: inline-flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn-primary {
    background: white;
    color: var(--primary-color, #000);
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
    color: var(--primary-color, #000);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    padding: 1rem 2rem;
    border: 2px solid white;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--primary-color, #000);
    transform: translateY(-2px);
  }

  /* Stats Section */
  .stats-section {
    background: var(--background-light, #f8f9fa);
    padding: 3rem 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .stat-card {
    text-align: center;
    padding: 2rem 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-4px);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--primary-color, #000);
    margin-bottom: 0.5rem;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary, #666);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
  }

  /* Featured Drops Section */
  .featured-drops {
    padding: 4rem 0;
    background: white;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--primary-color, #000);
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary, #666);
    line-height: 1.6;
  }

  .drops-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .drop-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid var(--border-light, #f0f0f0);
  }

  .drop-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  }

  .drop-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    background: var(--background-light, #f8f9fa);
    position: relative;
  }

  .drop-status {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--primary-color, #000);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .drop-status.live {
    background: #e74c3c;
    animation: pulse 2s infinite;
  }

  .drop-status.upcoming {
    background: #f39c12;
  }

  .drop-content {
    padding: 2rem;
  }

  .drop-title {
    font-size: 1.3rem;
    font-weight: 500;
    color: var(--primary-color, #000);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .drop-description {
    color: var(--text-secondary, #666);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .drop-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .drop-price {
    font-weight: 600;
    color: var(--primary-color, #000);
    font-size: 1.1rem;
  }

  .drop-allocation {
    color: var(--text-secondary, #666);
  }

  .allocation-bar {
    height: 4px;
    background: var(--border-light, #f0f0f0);
    border-radius: 2px;
    overflow: hidden;
    margin: 1rem 0;
  }

  .allocation-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color, #000), var(--accent-color, #333));
    border-radius: 2px;
    transition: width 0.5s ease;
  }

  .drop-cta {
    text-align: center;
  }

  .view-drop-btn {
    display: inline-block;
    background: var(--primary-color, #000);
    color: white;
    padding: 0.875rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
  }

  .view-drop-btn:hover {
    background: var(--primary-hover, #333);
    transform: translateY(-2px);
    color: white;
  }

  /* About Section */
  .about-section {
    background: var(--background-light, #f8f9fa);
    padding: 4rem 0;
  }

  .about-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .about-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 2rem;
    border: 4px solid white;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .about-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-secondary, #666);
    margin-bottom: 2rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: white;
    border-radius: 50%;
    color: var(--primary-color, #000);
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    color: var(--primary-color, #000);
  }

  /* Newsletter Section */
  .newsletter-section {
    background: var(--primary-color, #000);
    color: white;
    padding: 3rem 0;
    text-align: center;
  }

  .newsletter-content {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .newsletter-title {
    font-size: 2rem;
    font-weight: 300;
    margin-bottom: 1rem;
  }

  .newsletter-subtitle {
    opacity: 0.9;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-input {
    flex: 1;
    padding: 1rem;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    outline: none;
  }

  .newsletter-btn {
    background: white;
    color: var(--primary-color, #000);
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
  }

  .newsletter-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
  }

  /* Animations */
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .drops-grid {
      grid-template-columns: 1fr;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .social-links {
      flex-wrap: wrap;
    }
  }
</style>

<!-- Homepage Content -->
<div class="homepage">
  
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">{{ store_title }}</h1>
      <p class="hero-subtitle">
        {{ settings.hero_subtitle | default: 'Luxury fashion meets authentic creativity' }}
      </p>
      
      {% if featured_collection.products.size > 0 %}
        <div class="hero-cta">
          <a href="{{ featured_collection.url }}" class="btn-primary">
            Shop Collection
          </a>
          {% if settings.show_live_section %}
            <a href="#live" class="btn-secondary">
              Watch Live
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </section>

  <!-- Stats Section -->
  {% if show_stats %}
    <section class="stats-section">
      <div class="stats-grid">
        <div class="stat-card fade-in-up">
          <div class="stat-number" data-count="{{ customer.metafields.custom.total_orders | default: 0 }}">
            {{ customer.metafields.custom.total_orders | default: 0 }}
          </div>
          <div class="stat-label">Total Orders</div>
        </div>
        
        <div class="stat-card fade-in-up">
          <div class="stat-number" data-count="{{ customer.metafields.custom.conversion_rate | default: 0 }}">
            {{ customer.metafields.custom.conversion_rate | default: 0 }}%
          </div>
          <div class="stat-label">Conversion Rate</div>
        </div>
        
        <div class="stat-card fade-in-up">
          <div class="stat-number" data-count="{{ customer.metafields.custom.social_followers | default: 0 }}">
            {{ customer.metafields.custom.social_followers | default: 0 | divided_by: 1000 }}K
          </div>
          <div class="stat-label">Followers</div>
        </div>
        
        <div class="stat-card fade-in-up">
          <div class="stat-number" data-count="{{ customer.metafields.custom.total_earnings | default: 0 | money_without_currency }}">
            ${{ customer.metafields.custom.total_earnings | default: 0 | money_without_currency }}
          </div>
          <div class="stat-label">Total Earnings</div>
        </div>
      </div>
    </section>
  {% endif %}

  <!-- Featured Drops Section -->
  {% if show_live_drops and featured_collection.products.size > 0 %}
    <section class="featured-drops">
      <div class="section-header">
        <h2 class="section-title">Live Drops</h2>
        <p class="section-subtitle">
          Exclusive, limited-time collections crafted in collaboration with Studio Sivad
        </p>
      </div>

      <div class="drops-grid">
        {% for product in featured_collection.products limit: 3 %}
          {%- liquid
            assign drop_status = product.metafields.custom.drop_status | default: 'active'
            assign allocation_target = product.metafields.custom.allocation_target | default: 100
            assign current_reservations = product.metafields.custom.current_reservations | default: 0
            assign drop_end_date = product.metafields.custom.drop_end_date
            
            assign allocation_percentage = 0
            if allocation_target > 0
              assign allocation_percentage = current_reservations | times: 100.0 | divided_by: allocation_target
            endif
          -%}

          <div class="drop-card fade-in-up">
            <div class="drop-image">
              {% if product.featured_media %}
                {{ product.featured_media | image_url: width: 500 | image_tag: 
                   loading: 'lazy', 
                   alt: product.title,
                   class: 'drop-image' }}
              {% else %}
                <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #f0f0f0, #e0e0e0); display: flex; align-items: center; justify-content: center; color: #999;">
                  No Image
                </div>
              {% endif %}
              
              <div class="drop-status {{ drop_status }}">
                {% case drop_status %}
                  {% when 'live' %}
                    ● Live
                  {% when 'upcoming' %}
                    Upcoming
                  {% when 'ended' %}
                    Ended
                  {% else %}
                    Active
                {% endcase %}
              </div>
            </div>

            <div class="drop-content">
              <h3 class="drop-title">{{ product.title }}</h3>
              
              {% if product.description != blank %}
                <p class="drop-description">
                  {{ product.description | strip_html | truncate: 120 }}
                </p>
              {% endif %}

              <div class="drop-meta">
                <span class="drop-price">
                  From ${{ product.price_min | money_without_currency }}
                </span>
                <span class="drop-allocation">
                  {{ current_reservations }}/{{ allocation_target }} reserved
                </span>
              </div>

              {% if allocation_target > 0 %}
                <div class="allocation-bar">
                  <div class="allocation-fill" style="width: {{ allocation_percentage }}%"></div>
                </div>
              {% endif %}

              <div class="drop-cta">
                <a href="{{ product.url }}" class="view-drop-btn">
                  {% if drop_status == 'live' or drop_status == 'active' %}
                    Reserve Now
                  {% elsif drop_status == 'upcoming' %}
                    Learn More
                  {% else %}
                    View Details
                  {% endif %}
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if featured_collection.products.size > 3 %}
        <div style="text-align: center; margin-top: 3rem;">
          <a href="{{ featured_collection.url }}" class="btn-primary">
            View All Drops
          </a>
        </div>
      {% endif %}
    </section>
  {% endif %}

  <!-- About Section -->
  {% if show_about %}
    <section class="about-section">
      <div class="about-content">
        <div class="section-header">
          <h2 class="section-title">About {{ collaborator_name }}</h2>
        </div>

        {% if settings.collaborator_image %}
          {{ settings.collaborator_image | image_url: width: 300 | image_tag: 
             class: 'about-image',
             alt: collaborator_name }}
        {% endif %}

        <div class="about-text">
          {{ settings.about_text | default: 'Passionate about creating unique, high-quality fashion that tells a story. Every piece is crafted with intention and designed to make you feel confident and authentic.' }}
        </div>

        <div class="social-links">
          {% if settings.instagram_handle %}
            <a href="https://instagram.com/{{ settings.instagram_handle }}" target="_blank" class="social-link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.16c3.2 0 3.58.01 4.85.07 1.17.05 1.8.25 2.23.41.56.22.96.48 1.38.9.42.42.68.82.9 1.38.16.43.36 1.06.41 2.23.06 1.27.07 1.65.07 4.85s-.01 3.58-.07 4.85c-.05 1.17-.25 1.8-.41 2.23-.22.56-.48.96-.9 1.38-.42.42-.82.68-1.38.9-.43.16-1.06.36-2.23.41-1.27.06-1.65.07-4.85.07s-3.58-.01-4.85-.07c-1.17-.05-1.8-.25-2.23-.41-.56-.22-.96-.48-1.38-.9-.42-.42-.68-.82-.9-1.38-.16-.43-.36-1.06-.41-2.23-.06-1.27-.07-1.65-.07-4.85s.01-3.58.07-4.85c.05-1.17.25-1.8.41-2.23.22-.56.48-.96.9-1.38.42-.42.82-.68 1.38-.9.43-.16 1.06-.36 2.23-.41 1.27-.06 1.65-.07 4.85-.07zm0-2.16c-3.26 0-3.67.01-4.95.07-1.28.06-2.16.27-2.93.57-.79.31-1.46.72-2.13 1.39-.67.67-1.08 1.34-1.39 2.13-.3.77-.51 1.65-.57 2.93-.06 1.28-.07 1.69-.07 4.95s.01 3.67.07 4.95c.06 1.28.27 2.16.57 2.93.31.79.72 1.46 1.39 2.13.67.67 1.34 1.08 2.13 1.39.77.3 1.65.51 2.93.57 1.28.06 1.69.07 4.95.07s3.67-.01 4.95-.07c1.28-.06 2.16-.27 2.93-.57.79-.31 1.46-.72 2.13-1.39.67-.67 1.08-1.34 1.39-2.13.3-.77.51-1.65.57-2.93.06-1.28.07-1.69.07-4.95s-.01-3.67-.07-4.95c-.06-1.28-.27-2.16-.57-2.93-.31-.79-.72-1.46-1.39-2.13-.67-.67-1.34-1.08-2.13-1.39-.77-.3-1.65-.51-2.93-.57-1.28-.06-1.69-.07-4.95-.07z"/>
