<style>
  .site-footer {
    background: var(--color-primary, #000);
    color: white;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .footer-brand p {
    opacity: 0.8;
    line-height: 1.5;
  }

  .footer-links h4,
  .footer-social h4 {
    font-size: 1rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-links a:hover {
    opacity: 1;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: white;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
    text-align: center;
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .footer-bottom a {
    color: white;
    text-decoration: none;
  }

  .footer-bottom a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>